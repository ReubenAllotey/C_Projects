#include <iostream>
#include <string>
#include <cmath>

// control structures [NESTED IF STATEMENTS]
//general syntax
/* if(condition)
 *    statement;
 *    else if(condition)
 *    statement;
 *    else if(condition)
 *    statement;
 *    ..
 *    ..
 *    ...
 *    else
 *    statement;
 *    */

using namespace std;

int main (){
int money;
cout<<"how do you have:"<<endl;
cin>>money;
if(money>1000){
    cout<<"the money you have is"<<money;
    cout<<"you can go the restaurant "<<endl;

}
else if(money>700){
    cout<<"the money you have is"<<money;
    cout<<"you can go the juicebar"<<endl;
}
else if(money>500) {
    cout << "the money you have is" << money;
    cout << "you can go and have coffee. " << endl;
}
else {
cout<<"stay at home.";
}

    return 0;
}
