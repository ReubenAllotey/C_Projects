#include <iostream>
using namespace std;
// working with loops[FOR LOOPS]
/*
general syntax:
for(expression 1;expression 2; expression 3){
      loop body};

      OR
for(initialization ; condition; update){
      loop body};

*/
int main()
{
    // for (int i = 1; i <= 10; i++)
    // {

    //     cout << i << endl;
    // }
    //  solution to calculate the sum of odd integers from 1 to 15 (inclusive )

    int i, sum = 0;
    for (i = 1; i <= 15; ++i)
    {
        if (i % 2 != 0)
        {
            sum = sum + i;
        }
        cout << "sum is:" << sum << endl;
    }
    return 0;
}
