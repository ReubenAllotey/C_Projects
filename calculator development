//generating random numbers  /calculator development
 float num1,num2,res;
 cout <<"enter num1 , num2 ";
  cin>>num1>>num2;
char mathsOperation ;
cout<<"enter mathsOperation";
cin>>mathsOperation;

 if (mathsOperation=='+'){
     res=(num1+num2);
 }else if (mathsOperation=='-'){
     res=(num1-num2);
 }else if (mathsOperation=='/') {
     res = (num1 / num2);
 }else if (mathsOperation=='*') {
     res = (num1 * num2);
 }
     cout << res;
